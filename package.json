    "sf-pro",
    "sf-mono",
    "nextjs",
    "tailwind"
  ],
  "author": "Arman",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.2.17",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "next": "^15.3.4"
  }
}
